#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

indent() {
  sed -u 's/^/       /'
}

# config
APACHE_VERSION="2.2.22"
APACHE_PATH="apache"
PHP_VERSION="5.4.4"
PHP_PATH="php"
BRANCH="develop"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move app things to www
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

APACHE_URL="http://dl.dropbox.com/u/62064441/apache.tar.gz"
echo "-----> Bundling Apache version $APACHE_VERSION"
curl --silent --max-time 60 --location "$APACHE_URL" | tar xz

PHP_URL="http://dl.dropbox.com/u/62064441/php.tar.gz"
echo "-----> Bundling PHP version $PHP_VERSION"
curl --silent --max-time 60 --location "$PHP_URL" | tar xz


mkdir $CACHE_DIR/git
cd $CACHE_DIR/git

GIT="https://github.com/pateketrueke/tetlphp/tarball/$BRANCH"
echo "-----> Downloading framework from GitHub"
curl --silent --max-time 60 --location "$GIT" | tar xz

cd "$CACHE_DIR/git/$(ls $CACHE_DIR/git)"
PHPLIB="$BUILD_DIR/php/lib/php"

mkdir -p $PHPLIB/tetlphp
cp -R . $PHPLIB/tetlphp

cd $BUILD_DIR


# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini php

# make php available on bin
mkdir -p bin

echo "/app/php/bin/php \"\$@\"" >> bin/php
chmod +x bin/php


# make atl available on bin too
STACKY="tetlphp/stack/initialize.php"
ENVVARS="ENV=production"

echo "Environment and binaries..." | indent
echo "cd /app/www && $ENVVARS /app/php/bin/php -f /app/php/lib/php/$STACKY -- \"\$@\"" >> bin/atl

chmod +x bin/atl

# execute assets compilation
cd www

echo "Compiling assets for production..." | indent
eval "$ENVVARS LD_LIBRARY_PATH=$BUILD_DIR/php/ext $BUILD_DIR/php/bin/php -f $BUILD_DIR/php/lib/php/$STACKY -- build" > /dev/null 2>&1

cd $BUILD_DIR


cat >>boot.sh <<EOF
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext
export PHP_INI_SCAN_DIR=/app/www
echo "Launching Apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR/*
